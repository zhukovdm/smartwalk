{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
  "references": [
    { "path": "../shared" }
  ]
}
